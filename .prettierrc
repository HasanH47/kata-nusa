{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "printWidth": 100,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "singleAttributePerLine": false,
  "phpVersion": "8.4",
  "plugins": [
    "@prettier/plugin-php",
    "@shufo/prettier-plugin-blade",
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "parser": "blade",
        "tabWidth": 2,
        "printWidth": 80,
        "singleQuote": false,
        "bracketSpacing": true,
        "bracketSameLine": true
      }
    },
    {
      "files": ["*.php"],
      "options": {
        "parser": "php",
        "phpVersion": "8.4",
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": true,
        "bracketSpacing": true,
        "braceStyle": "allman"
      }
    }
  ]
}
